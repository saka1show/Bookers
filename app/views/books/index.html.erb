<h1>Books</h1>

<ul>
  <div class="book-wrap">
    <div class="book-commnet">
      <table width="80%">
        <tr>
          <th width="20%">Title</th>
          <th width="43%">Body</th>
          <th></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to 'Show', book_path(book.id) %><%= link_to 'Edit', edit_book_path(book.id) %><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</ul>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div style="border: 3px solid red; padding: 10px;">
    <span class="error"><%= @book.errors.count %> errors prohibited this book from being saved:</span>
    <hr style="margin: 5px;">
    <ur>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ur>
  </div>
<% end %>

<div class="form">
<%= form_with model: @book do |f| %>
  <div class="label">Title</div>
  <%= f.text_field :title %>

  <div class="label">Body</div>
  <%= f.text_area :body %>

  <div><%= f.submit 'Create Book' %></div>
<% end %>
</div>
