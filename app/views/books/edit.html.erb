<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <div class="label">Title</div>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <div class="label">Body</div>
    <%= f.text_area :body %>
  </div>
  <div class="field">
  <%= f.submit 'Update Book' %>
  </div>

  <% end %>

<span>
<%= link_to 'Show', book_path(@book.id) %> |
<a href='/books'>Back</a>
</span>