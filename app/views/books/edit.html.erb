<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div style="border: 3px solid red; padding: 10px;">
    <span class="error"><%= @book.errors.count %>errors prohibited this book from being saved:</span>
    <hr style="margin: 5px;">
    <ur>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ur>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <div class="label">Title</div>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <div class="label">Body</div>
    <%= f.text_area :body %>
  </div>
  <div class="field">
  <%= f.submit 'Update Book' %>
  </div>

  <% end %>

<span>
<%= link_to 'Show', book_path(@book.id) %> |
<a href='/books'>Back</a>
</span>